			"name": "Register User",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"// Generiše jedinstveno korisničko ime za svaki test pokretanje",
							"pm.environment.set(\"test_username\", \"testuser_\" + Date.now());",
							"pm.environment.set(\"test_fullname\", \"Test User \" + Date.now());",
							"pm.environment.set(\"test_password\", \"password123\");"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 201 Created\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Response contains token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    // Čuva token za dalju upotrebu, ali se ne setuje kao glavni token ovde",
							"    // jer je Login sledeći korak koji će setovati pravi token za testiranje",
							"    // pm.environment.set(\"user_token\", jsonData.token);",
							"});"
						]
					}
				}
			],
