		{
			"name": "Login User (and set token)",
			"event": [
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 200 OK\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"pm.test(\"Response contains token\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.have.property('token');",
							"    // Ovde se token čuva u environment varijabli \"authToken\"",
							"    pm.environment.set(\"authToken\", jsonData.token);",
							"    ",
							"    // Parsiranje User ID iz tokena (pretpostavljamo format: ID:USERNAME:ROLE:TIMESTAMP)",
							"    // Ovo je pojednostavljeno i zavisi od tvog TokenUtil implementacije",
							"    let decodedToken = atob(jsonData.token); // Base64 dekodiranje",
							"    let tokenParts = decodedToken.split(':');",
							"    if (tokenParts.length >= 1) {",
							"        pm.environment.set(\"current_user_id\", tokenParts[0]);",
							"        pm.environment.set(\"current_username\", tokenParts[1]);",
							"        pm.environment.set(\"current_user_role\", tokenParts[2]);",
							"    } else {",
							"        console.error(\"Invalid token format for user ID extraction:\", decodedToken);",
							"    }",
							"});"
						]
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"username\": \"{{test_username}}\",\n  \"password\": \"{{test_password}}\"\n}\n",
					"options": {
