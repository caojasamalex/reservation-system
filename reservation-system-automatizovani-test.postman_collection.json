		{
			"name": "Create repeating reservation (DAILY)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"exec": [
							"let startDate = new Date();",
							"startDate.setDate(startDate.getDate() + 2); // Start 2 days from now",
							"let endDate = new Date(startDate);",
							"endDate.setDate(startDate.getDate() + 5); // Ends 5 days after start",
							"pm.environment.set(\"repeating_start_date\", startDate.toISOString().split('T')[0]);",
							"pm.environment.set(\"repeating_end_date\", endDate.toISOString().split('T')[0]);"
						]
					}
				},
				{
					"listen": "test",
					"script": {
						"type": "text/javascript",
						"exec": [
							"pm.test(\"Status code is 201 Created\", function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"pm.test(\"Response contains new repeating reservation ID\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData).to.be.a('number');",
							"    pm.environment.set(\"test_repeating_reservation_id\", jsonData);",
							"});"
						]
					}
				}
			],
