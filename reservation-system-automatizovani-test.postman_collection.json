		{
			"name": "Get available slots",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"let today = new Date();\r",
							"let year = today.getFullYear();\r",
							"let month = (today.getMonth() + 1).toString().padStart(2, '0'); // Meseci su 0-11\r",
							"let day = today.getDate().toString().padStart(2, '0');\r",
							"let formattedDate = `${year}-${month}-${day}`;\r",
							"pm.environment.set(\"today\", formattedDate);"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
